<h1>Listing workers</h1>
<table class = "table table-bordered table-striped table table-hover pretty">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Work orders</th>
	<th></th>
	<th></th>
	<th></th>
  </tr>

  <% @workers.each do |worker| %>
    <tr>
      <td><%= worker.first_name %></td>
      <td><%= worker.last_name %></td>
      <td><%= link_to 'View all', '#' %></td>
      <td><%= link_to 'Show', worker %></td>
      <td><%= link_to 'Edit', edit_worker_path(worker) %></td>
      <td><%= link_to 'Destroy', worker, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
  <% end %>
</table>

<br />
<%= link_to 'New worker', new_worker_path %> | <%= link_to 'Work Orders', work_orders_path%>
