<h1>Details for <%= @worker.first_name %> <%= @worker.last_name %></h1>

<p>
  <strong>First name:</strong>
  <%= @worker.first_name %>
</p>

<p>
  <strong>Last name:</strong>
  <%= @worker.last_name %>
</p>

<h2>Assigned Work Orders</h2>

<table>
  <thead>
    <tr>
	  <th>Worker</th>
      <th>Details</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @worker.work_orders.each do |worker| %>
      <tr>
  		<td><%= worker.worker_id %></td>
          <td><%= worker.details %></td>
          <td><%= worker.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Edit', edit_worker_path(@worker) %> |
<%= link_to 'Back', root_path %>
